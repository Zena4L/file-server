extends base

block content
    main 
        .content-frame.mt-10 
            .content-card.p-10.rounded.shadow-md.bg-indigo-300(class="min-w-fit mx-auto h-auto").ml-10.mr-10 
                .img-frame.h-80 
                    if file.fileType === 'PDF'
                        a(href=`./data/${file.fileUrl}`) 
                            h5.text-center Click Here Open
                    else if file.fileType === 'AUDIO'
                        audio(src=fileUrl, controls=true) 
                            p Your browser does not support the audio element.
                    else if file.fileType === 'IMAGE'
                        img.h-full.w-full.object-fill(src=`./data/${file.fileUrl}`, alt="", srcset="")
                    else if file.fileType === 'VIDEO'
                        video(src=fileUrl, width='100%', height='auto', controls=true)
                            p Your browser does not support the video element.
                    else
                        p File preview not available.
                .description.mt-10.items-center.border-2.p-5 
                    //- this part is only for admins
                    p.text-center=file.description
                .stats-here.flex.gap-10.justify-center.mt-10 
                    if user.role === "admin"
                        .download-count.flex.gap-3
                            svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                                path(stroke-linecap='round', stroke-linejoin='round', d='M7.5 7.5h-.75A2.25 2.25 0 004.5 9.75v7.5a2.25 2.25 0 002.25 2.25h7.5a2.25 2.25 0 002.25-2.25v-7.5a2.25 2.25 0 00-2.25-2.25h-.75m-6 3.75l3 3m0 0l3-3m-3 3V1.5m6 9h.75a2.25 2.25 0 012.25 2.25v7.5a2.25 2.25 0 01-2.25 2.25h-7.5a2.25 2.25 0 01-2.25-2.25v-.75') 
                            span=file.downloadCount
                            h5 Downloads
                        .email-count.flex.gap-3
                            svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                                path(stroke-linecap='round', stroke-linejoin='round', d='M21.75 9v.906a2.25 2.25 0 01-1.183 1.981l-6.478 3.488M2.25 9v.906a2.25 2.25 0 001.183 1.981l6.478 3.488m8.839 2.51l-4.66-2.51m0 0l-1.023-.55a2.25 2.25 0 00-2.134 0l-1.022.55m0 0l-4.661 2.51m16.5 1.615a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V8.844a2.25 2.25 0 011.183-1.98l7.5-4.04a2.25 2.25 0 012.134 0l7.5 4.04a2.25 2.25 0 011.183 1.98V19.5z')
                            span=file.emailCount
                            h5 Emails Sent
                   

