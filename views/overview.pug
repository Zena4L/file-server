extends base

block content
    .bg-white.p-8.main(class="w-3/4")
        .flex.justify-between.pb-10.mb-10
            .search-bar
                form.border-indigo-500.border.rounded-rounded.search-form(action='/search', method='GET')
                    input.text-center.search-field(type='text', name='q', placeholder='Search file')
                    button.search-btn(type='submit')
            .flex.gap-5 
                //- img.h-7.w-7.rounded-full(src="./img/blank-profile-picture-973460_960_720.webp", alt="User photo")
                //- a.border-b-2(href="#", class="hover:border-b-indigo-500 transition ease-in duration:500")
                //-     span Clement 
                button.rounded-full.border.bg-indigo-50.px-5.border-sky-500(class="hover:bg-indigo-500 hover:text-white transition ease-out duration:500") Log in 
                button.rounded-full.border.bg-indigo-50.px-5.border-sky-500(class="hover:bg-indigo-500 hover:text-white transition ease-out duration:500") Sign up
        .card-container
            each file in files
                .card.flex.justify-evenly.border-b-2.pb-5.pt-5
                    label
                        input(type="checkbox" name="myCheckbox" value="true")
                    .file-thumbnail-here
                        span=file.fileType
                    .file-name=file.title
                    .svg-here
                        a.flex.gap-3(href=`/${file.slug}`) 
                            svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                                path(stroke-linecap='round', stroke-linejoin='round', d='M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z')
                                path(stroke-linecap='round', stroke-linejoin='round', d='M15 12a3 3 0 11-6 0 3 3 0 016 0z') 
                            h5 preview
                    .svg-here
                        a.flex.gap-3(href="#") 
                            svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                                path(stroke-linecap='round', stroke-linejoin='round', d='M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3')
                            h5 Download
                    .svg-here
                        a.flex.gap-3(href="#") 
                            svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                                path(stroke-linecap='round', stroke-linejoin='round', d='M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75')
                            h5 Send to mail