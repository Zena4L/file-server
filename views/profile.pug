extends base

block content
    section.py-26.bg-white
      .flex.items-center.justify-center.h-screen.ml-20.text-center.gap-10
        .max-w-lg.mx-auto.py-8.border-r-4.pr-20
          .text-center.mb-8
            h2.text-3xl.font-extrabold.mb-2(class='md:text-4xl') Account Settings
            //-  form(action='/submit-user-data', method='POST')
          form.user-data-from(action='/submit-user-data', method='POST')
            .mb-6
              label.block.mb-2.font-extrabold(for='name') Name
              input#name.text-center.inline-block.w-full.p-4.leading-6.text-lg.font-extrabold.placeholder-indigo-900.bg-white.shadow.border-2.border-indigo-900.rounded(type='text', value=`${user.name}`, required, name='name')
            .mb-6
              label.block.mb-2.font-extrabold(for='') Email
              input#email.text-center.inline-block.w-full.p-4.leading-6.text-lg.font-extrabold.placeholder-indigo-900.bg-white.shadow.border-2.border-indigo-900.rounded(type='email', value=`${user.email}`, required, name='email')
            .flex.flex-wrap.-mx-4.mb-6.items-center.justify-between
            button.inline-block.w-full.py-4.px-6.mb-6.text-center.text-lg.leading-6.text-white.font-extrabold.bg-indigo-800.border-3.border-indigo-900.shadow.rounded.transition.duration-200(class='hover:bg-indigo-900') Save Settings
        .max-w-lg.mx-auto.py-8.ml-20
          .text-center.mb-8
            h2.text-3xl.font-extrabold.mb-2(class='md:text-4xl') Change Password
          form.user-password-forms(action='')
            .mb-6
              label.block.mb-2.font-extrabold(for='password-current') Current password
              input#password-current.text-center.inline-block.w-full.p-4.leading-6.text-lg.font-extrabold.placeholder-indigo-900.bg-white.shadow.border-2.border-indigo-900.rounded(class='focus:outline-none focus:border-indigo-500' type='password', placeholder='********', required, minlength='8')
            .mb-6
              label.block.mb-2.font-extrabold(for='password') New password
              input#password.text-center.inline-block.w-full.p-4.leading-6.text-lg.font-extrabold.placeholder-indigo-900.bg-white.shadow.border-2.border-indigo-900.rounded(class='focus:outline-none focus:border-indigo-500' type='password', placeholder='********', required, minlength='8')
            .mb-6
              label.block.mb-2.font-extrabold(for='') Password Confirm
              input#password-confirm.text-center.inline-block.w-full.p-4.leading-6.text-lg.font-extrabold.placeholder-indigo-900.bg-white.shadow.border-2.border-indigo-900.rounded(class='focus:outline-none focus:border-indigo-500' type='password', placeholder='********', required, minlength='8')
            .flex.flex-wrap.-mx-4.mb-6.items-center.justify-between
            button.inline-block.w-full.py-4.px-6.mb-6.text-center.text-lg.leading-6.text-white.font-extrabold.bg-indigo-800.border-3.border-indigo-900.shadow.rounded.transition.duration-200(class='hover:bg-indigo-900') Save Password



